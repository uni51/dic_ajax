<h1>ブログ一覧</h1>

<%= render 'layouts/flash_messages' %>

<div class="row">
  <% @blogs.each do |blog| %>
    <div class="col-xs-12 col-md-6 blog-panel">
      <h2><%= blog.title %></h2>
      <p><%= blog.content %></p>
      <p>投稿者：<%= blog.user.name %></p>
      <div class="blog-links">
        <%= link_to '詳細', blog_path(blog.id), class: 'btn btn-default' %>
        <% if blog.user == current_user %>
          <%= link_to '編集', edit_blog_path(blog.id), class: 'btn btn-info' %>
          <%= link_to '削除', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
